{
  "tasks": {
    "mcp": "deno run --allow-all mcp-server.ts",
    "backend": "deno run --allow-net --allow-read --allow-write --allow-env backend/src/main.ts",
    "backend:dev": "deno run --no-prompt --allow-env --allow-net --allow-read --allow-write --watch backend/src/main.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env backend/src/test-integration.ts",
    "test:mcp": "deno test --no-check --allow-read --allow-write --allow-env backend/src/mcp-integration.test.ts"
  },
  "imports": {
    "@modelcontextprotocol/sdk/": "npm:@modelcontextprotocol/sdk@latest/",
    "@oak/oak": "jsr:@oak/oak@^17.1.0",
    "@std/http": "jsr:@std/http@^1.0.8"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true
  },
  "fmt": {
    "files": {
      "include": ["./**/*.ts", "./**/*.tsx", "./**/*.js", "./**/*.jsx"],
      "exclude": ["./node_modules/", "./frontend/node_modules/", "./frontend/dist/"]
    }
  },
  "lint": {
    "files": {
      "include": ["./**/*.ts", "./**/*.tsx", "./**/*.js", "./**/*.jsx"],
      "exclude": ["./node_modules/", "./frontend/node_modules/", "./frontend/dist/"]
    }
  }
}